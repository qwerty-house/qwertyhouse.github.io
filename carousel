// --- Utility: Similarity Check (Jaccard Index) ---
const calculateSimilarity = (str1: string, str2: string) => {
  const clean = (s: string) => s.toLowerCase().replace(/[^\w\s\u0E00-\u0E7F]/g, '');
  const set1 = new Set(clean(str1).split(/\s+/));
  const set2 = new Set(clean(str2).split(/\s+/));
  const intersection = new Set([...set1].filter(x => set2.has(x)));
  const union = new Set([...set1, ...set2]);
  return union.size === 0 ? 0 : intersection.size / union.size;
};

// --- Gemini API Helper ---
const generateContentBatch = async (
  apiKey: string, 
  topic: string, 
  count: number,
  tone: string,
  existingHooks: string[]
): Promise<any[]> => {
  // Pass existing hooks to AI to prevent duplicates
  const contextHooks = existingHooks.slice(0, 30).join("\n- ");
  
  const prompt = `
    Role: Elite Social Media Strategist (Thai Language).
    Task: Generate ${count} HIGH-VALUE, UNIQUE content pieces about "${topic}".
    Tone: ${tone}.
    
    CRITICAL CONSTRAINT - AVOID DUPLICATION:
    The user has already written about these angles. DO NOT generate similar ideas to these:
    ${contextHooks ? `- ${contextHooks}` : "(No previous context)"}
    
    STRICT STRUCTURE (JSON):
    1. Hook: High-impact, scroll-stopping headline.
    2. Body: Problem -> Insight -> Solution (Concise, punchy).
    3. CTA: Clear next step.

    Format: JSON Array of objects: [{ "hook": "...", "body": "...", "cta": "..." }]
  `;

  try {
    const response = await fetch(
      `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`,
      {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          contents: [{ parts: [{ text: prompt }] }],
          generationConfig: { responseMimeType: "application/json" }
        })
      }
    );

    if (!response.ok) throw new Error('API Request Failed');
    
    const data = await response.json();
    const text = data.candidates?.[0]?.content?.parts?.[0]?.text;
    return JSON.parse(text);
  } catch (error) {
    console.error("Generation Error:", error);
    throw error;
  }
};

// --- Component: Content Card ---
const ContentCard = ({ 
  post, 
  onDelete, 
  onUpdate,
  allPosts 
}: { 
  post: ContentPost, 
  onDelete: (id: string) => void,
  onUpdate: (id: string, data: Partial<ContentPost>) => void,
  allPosts: ContentPost[]
}) => {
  const [isEditing, setIsEditing] = useState(false);
  const [editData, setEditData] = useState({ hook: post.hook, body: post.body, cta: post.cta });
  const [copied, setCopied] = useState(false);

  // Check for similarity against OTHER posts (excluding self)
  const isDuplicate = useMemo(() => {
    if (post.status === 'posted') return false; 
    return allPosts.some(p => 
      p.id !== post.id && 
      calculateSimilarity(p.hook, post.hook) > 0.6 
    );
  }, [post, allPosts]);

  const handleCopy = () => {
    navigator.clipboard.writeText(`${post.hook}\n\n${post.body}\n\n${post.cta}`);
    setCopied(true);
    setTimeout(() => setCopied(false), 2000);
  };

  const handleSave = () => {
    onUpdate(post.id, { 
      ...editData, 
      fullText: `${editData.hook}\n${editData.body}\n${editData.cta}` 
    });
    setIsEditing(false);
  };

  const toggleStatus = () => {
    onUpdate(post.id, { status: post.status === 'idea' ? 'posted' : 'idea' });
  };

  return (
    <div className={`
      relative group flex flex-col h-full rounded-2xl transition-all duration-300 border
      ${post.status === 'posted' 
        ? 'bg-slate-50 border-slate-200 opacity-75 grayscale-[0.3]' 
        : 'bg-white border-slate-100 shadow-sm hover:shadow-xl hover:shadow-indigo-100 hover:-translate-y-1'
      }
    `}>
      {/* Duplicate Warning Overlay */}
      {isDuplicate && !isEditing && (
        <div className="absolute -top-3 -right-3 z-10 bg-amber-100 text-amber-700 text-xs px-3 py-1 rounded-full font-medium shadow-sm flex items-center gap-1 border border-amber-200">
          <AlertTriangle size={12} />
          Similar to existing
        </div>
      )}

      {/* Card Header */}
      <div className="p-5 pb-0 flex justify-between items-start gap-3">
        <div className="flex flex-wrap gap-2">
          <span className={`text-[10px] uppercase tracking-wider font-bold px-2 py-1 rounded-md ${
            post.topic === 'Frustrations' ? 'bg-red-50 text-red-600' :
            post.topic === 'Desires' ? 'bg-blue-50 text-blue-600' :
            post.topic === 'Fears' ? 'bg-amber-50 text-amber-600' :
            'bg-slate-100 text-slate-600'
          }`}>
            {post.topic}
          </span>
          {post.status === 'posted' && (
            <span className="text-[10px] uppercase tracking-wider font-bold px-2 py-1 rounded-md bg-green-100 text-green-700 flex items-center gap-1">
              <CheckCircle2 size={10} /> Posted
            </span>
          )}
        </div>
        
        <div className="flex gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
          <button onClick={() => setIsEditing(!isEditing)} className="p-1.5 hover:bg-slate-100 rounded-md text-slate-400 hover:text-blue-600">
            {isEditing ? <X size={16} /> : <Edit2 size={16} />}
          </button>
          <button onClick={() => onDelete(post.id)} className="p-1.5 hover:bg-red-50 rounded-md text-slate-400 hover:text-red-500">
            <Trash2 size={16} />
          </button>
        </div>
      </div>

      {/* Card Body */}
      <div className="p-5 flex-grow space-y-3">
        {isEditing ? (
          <div className="space-y-3 animate-in fade-in duration-200">
            <input 
              value={editData.hook} 
              onChange={e => setEditData({...editData, hook: e.target.value})}
              className="w-full font-bold text-slate-900 border-b border-blue-200 focus:border-blue-500 outline-none pb-1"
            />
            <textarea 
              value={editData.body}
              onChange={e => setEditData({...editData, body: e.target.value})}
              className="w-full text-sm text-slate-600 h-32 resize-none border rounded-lg p-2 focus:ring-2 focus:ring-blue-100 outline-none"
            />
            <input 
              value={editData.cta}
              onChange={e => setEditData({...editData, cta: e.target.value})}
              className="w-full text-sm text-blue-600 border-b border-blue-200 focus:border-blue-500 outline-none pb-1"
            />
            <button 
              onClick={handleSave}
              className="w-full py-2 bg-blue-600 text-white rounded-lg text-xs font-semibold hover:bg-blue-700 flex items-center justify-center gap-2"
            >
              <Save size={14} /> Save Changes
            </button>
          </div>
        ) : (
          <>
            <h3 className="font-bold text-slate-900 leading-snug cursor-pointer" onClick={() => setIsEditing(true)}>
              {post.hook}
            </h3>
            <p className="text-sm text-slate-600 whitespace-pre-line leading-relaxed cursor-pointer" onClick={() => setIsEditing(true)}>
              {post.body}
            </p>
            <p className="text-xs font-semibold text-blue-600 pt-2 cursor-pointer" onClick={() => setIsEditing(true)}>
              {post.cta}
            </p>
          </>
        )}
      </div>

      {/* Card Footer */}
      <div className="p-4 border-t border-slate-50 flex justify-between items-center bg-slate-50/50 rounded-b-2xl">
        <button 
          onClick={toggleStatus}
          className={`text-xs font-medium px-3 py-1.5 rounded-full transition-colors flex items-center gap-1.5 ${
            post.status === 'posted' 
            ? 'bg-slate-200 text-slate-500' 
            : 'hover:bg-green-100 hover:text-green-700 text-slate-400'
          }`}
        >
          {post.status === 'posted' ? 'Mark Idea' : 'Mark Posted'}
        </button>
        
        <button 
          onClick={handleCopy}
          className={`flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-bold transition-all shadow-sm ${
            copied 
            ? 'bg-green-600 text-white shadow-green-200' 
            : 'bg-white text-slate-700 border border-slate-200 hover:border-blue-300 hover:text-blue-600'
          }`}
        >
          {copied ? <CheckCircle2 size={14} /> : <Copy size={14} />}
          {copied ? 'Copied' : 'Copy'}
        </button>
      </div>
    </div>
  );
};

export default function App() {
  const [user, setUser] = useState<User | null>(null);
  
  // Controls
  const [topic, setTopic] = useState('');
  const [tone, setTone] = useState('Professional & Insightful');
  const [searchTerm, setSearchTerm] = useState('');
  const [filter, setFilter] = useState<'all' | 'idea' | 'posted'>('all');
  
  // State
  const [posts, setPosts] = useState<ContentPost[]>([]);
  const [isGenerating, setIsGenerating] = useState(false);
  const [errorMsg, setErrorMsg] = useState('');
  const [isImporting, setIsImporting] = useState(false);

  // 1. Auth
  useEffect(() => {
    const initAuth = async () => {
      try {
        if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
          await signInWithCustomToken(auth, __initial_auth_token);
        } else {
          await signInAnonymously(auth);
        }
      } catch (err) { console.error("Auth", err); }
    };
    initAuth();
    const unsubscribe = onAuthStateChanged(auth, setUser);
    return () => unsubscribe();
  }, []);

  // 2. Data
  useEffect(() => {
    if (!user) return;
    const q = query(
      collection(db, 'artifacts', appId, 'users', user.uid, 'content_ideas'),
      orderBy('createdAt', 'desc')
    );
    return onSnapshot(q, (snap) => {
      setPosts(snap.docs.map(d => ({ id: d.id, ...d.data() } as ContentPost)));
    });
  }, [user]);

  // Handler: Import Preset Data
  const handleImportPreset = async () => {
    if (!user) return;
    setIsImporting(true);
    try {
      // Basic check to avoid double importing if user clicks twice fast
      const batch = writeBatch(db);
      const collectionRef = collection(db, 'artifacts', appId, 'users', user.uid, 'content_ideas');
      
      // Filter out duplicates that might already exist in current posts state
      const existingHooks = new Set(posts.map(p => p.hook));
      const toAdd = PRESET_DATA.filter(p => !existingHooks.has(p.hook));

      if (toAdd.length === 0) {
        alert("Content already imported!");
        setIsImporting(false);
        return;
      }

      toAdd.forEach((item) => {
        const docRef = doc(collectionRef); // Auto ID
        batch.set(docRef, {
          ...item,
          fullText: `${item.hook}\n${item.body}\n${item.cta}`,
          status: 'idea',
          createdAt: serverTimestamp()
        });
      });

      await batch.commit();
      setErrorMsg(`Successfully imported ${toAdd.length} Guru items.`);
      setTimeout(() => setErrorMsg(''), 3000);
    } catch (err) {
      console.error("Import failed", err);
      setErrorMsg("Import failed. Please try again.");
    } finally {
      setIsImporting(false);
    }
  };

  // 3. Smart Generate
  const handleGenerate = async (count: number) => {
    if (!topic.trim()) { setErrorMsg("Please enter a topic"); return; }
    setErrorMsg('');
    setIsGenerating(true);

    try {
      // SMART CONTEXT: Get recent hooks from current library to avoid dupes
      // Now includes the imported presets!
      const recentHooks = posts.slice(0, 30).map(p => p.hook);
      
      const generatedData = await generateContentBatch('', topic, count, tone, recentHooks);

      if (!user) return;
      
      const batchPromises = generatedData.map(item => 
        addDoc(collection(db, 'artifacts', appId, 'users', user.uid, 'content_ideas'), {
          topic,
          tone,
          hook: item.hook,
          body: item.body,
          cta: item.cta,
          fullText: `${item.hook}\n${item.body}\n${item.cta}`,
          status: 'idea',
          createdAt: serverTimestamp()
        })
      );
      await Promise.all(batchPromises);
      setTopic(''); 
    } catch (err) {
      console.error(err);
      setErrorMsg("Failed to generate. Please try again.");
    } finally {
      setIsGenerating(false);
    }
  };

  const handleUpdate = async (id: string, data: Partial<ContentPost>) => {
    if (!user) return;
    await updateDoc(doc(db, 'artifacts', appId, 'users', user.uid, 'content_ideas', id), data);
  };

  const handleDelete = async (id: string) => {
    if (!user) return;
    await deleteDoc(doc(db, 'artifacts', appId, 'users', user.uid, 'content_ideas', id));
  };

  const handleExportCSV = () => {
    if (posts.length === 0) return;
    const BOM = "\uFEFF"; 
    const headers = ["Topic", "Status", "Hook", "Body", "CTA", "Date"];
    const csvContent = posts.map(p => {
      const date = p.createdAt ? new Date(p.createdAt.seconds * 1000).toLocaleDateString() : '-';
      const esc = (t: string) => `"${(t || '').replace(/"/g, '""')}"`;
      return [esc(p.topic), esc(p.status), esc(p.hook), esc(p.body), esc(p.cta), esc(date)].join(",");
    }).join("\n");
    
    const url = URL.createObjectURL(new Blob([BOM + headers.join(",") + "\n" + csvContent], { type: 'text/csv;charset=utf-8;' }));
    const link = document.createElement("a");
    link.href = url;
    link.download = `carousel_content_by_tong_${new Date().toISOString().slice(0,10)}.csv`;
    link.click();
  };

  // Filter & Search Logic
  const filteredPosts = posts.filter(p => {
    const matchesSearch = 
      p.hook.toLowerCase().includes(searchTerm.toLowerCase()) || 
      p.topic.toLowerCase().includes(searchTerm.toLowerCase()) ||
      p.body.toLowerCase().includes(searchTerm.toLowerCase());
    const matchesFilter = filter === 'all' || p.status === filter;
    return matchesSearch && matchesFilter;
  });

  return (
    <div className="min-h-screen bg-slate-50 font-sans text-slate-900 selection:bg-indigo-100 selection:text-indigo-900">
      
      {/* Top Navigation */}
      <nav className="sticky top-0 z-20 bg-white/80 backdrop-blur-md border-b border-slate-200">
        <div className="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
          <div className="flex items-center gap-2">
            <div className="w-9 h-9 bg-gradient-to-tr from-blue-600 to-indigo-600 rounded-xl shadow-lg shadow-blue-200 flex items-center justify-center text-white">
              <Sparkles size={20} />
            </div>
            <h1 className="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-slate-800 to-slate-600">
              Carousel Content <span className="text-indigo-600">by Tong</span>
            </h1>
          </div>
          
          <div className="flex items-center gap-3">
             <div className="hidden md:flex items-center gap-2 px-3 py-1.5 bg-slate-100 rounded-full text-xs font-medium text-slate-500">
                <CheckCircle2 size={12} className="text-green-500" />
                {posts.filter(p => p.status === 'posted').length} Posted
                <span className="w-px h-3 bg-slate-300 mx-1"></span>
                <Sparkles size={12} className="text-amber-500" />
                {posts.filter(p => p.status === 'idea').length} Ideas
             </div>
            <button 
              onClick={handleExportCSV}
              disabled={posts.length === 0}
              className="p-2 text-slate-500 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors"
              title="Export CSV"
            >
              <Download size={20} />
            </button>
          </div>
        </div>
      </nav>

      <main className="max-w-7xl mx-auto px-4 py-8 grid grid-cols-1 lg:grid-cols-12 gap-8">
        
        {/* LEFT: Generator Panel */}
        <aside className="lg:col-span-4 space-y-6">
          <div className="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <div className="p-6 bg-gradient-to-br from-indigo-50/50 to-white border-b border-indigo-50">
              <h2 className="text-lg font-bold text-slate-800 flex items-center gap-2">
                <LayoutTemplate size={20} className="text-indigo-600" />
                Smart Generator
              </h2>
              <p className="text-xs text-slate-500 mt-1">
                AI scans your history to ensure uniqueness.
              </p>
            </div>
            
            <div className="p-6 space-y-5">
              <div className="space-y-1.5">
                <label className="text-xs font-semibold uppercase tracking-wider text-slate-500">Topic / Niche</label>
                <input 
                  type="text" 
                  value={topic}
                  onChange={(e) => setTopic(e.target.value)}
                  placeholder="e.g. Productivity for Remote Workers" 
                  className="w-full px-4 py-3 bg-slate-50 rounded-xl border-slate-200 focus:bg-white focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all outline-none text-slate-800 placeholder:text-slate-400"
                />
              </div>

              <div className="space-y-1.5">
                <label className="text-xs font-semibold uppercase tracking-wider text-slate-500">Voice & Tone</label>
                <div className="relative">
                  <select 
                    value={tone}
                    onChange={(e) => setTone(e.target.value)}
                    className="w-full px-4 py-3 bg-slate-50 rounded-xl border-slate-200 focus:bg-white focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all outline-none appearance-none text-slate-800"
                  >
                    <option>Professional & Insightful</option>
                    <option>Casual & Relatable</option>
                    <option>Direct & Controversial</option>
                    <option>Storytelling & Emotional</option>
                  </select>
                  <div className="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-slate-400">
                    <Filter size={16} />
                  </div>
                </div>
              </div>

              {errorMsg && (
                <div className={`flex items-center gap-2 text-sm p-3 rounded-xl border ${errorMsg.includes('Success') ? 'bg-green-50 text-green-700 border-green-200' : 'bg-red-50 text-red-600 border-red-100'}`}>
                  {errorMsg.includes('Success') ? <CheckCircle2 size={16}/> : <AlertCircle size={16} />}
                  {errorMsg}
                </div>
              )}

              <div className="grid grid-cols-2 gap-3 pt-2">
                <button
                  onClick={() => handleGenerate(1)}
                  disabled={isGenerating}
                  className="flex items-center justify-center gap-2 px-4 py-3.5 bg-white border border-slate-200 hover:border-indigo-200 hover:bg-indigo-50 text-slate-700 font-semibold rounded-xl transition-all disabled:opacity-50"
                >
                  {isGenerating ? <Loader2 className="animate-spin" size={18} /> : <Plus size={18} />}
                  One Idea
                </button>
                <button
                  onClick={() => handleGenerate(10)}
                  disabled={isGenerating}
                  className="relative overflow-hidden flex items-center justify-center gap-2 px-4 py-3.5 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-xl shadow-lg shadow-indigo-200 transition-all disabled:opacity-50 group"
                >
                  <div className="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300" />
                  {isGenerating ? <Loader2 className="animate-spin" size={18} /> : <Sparkles size={18} />}
                  <span className="relative">Generate 10x</span>
                </button>
              </div>
            </div>
          </div>
          
          <div className="bg-slate-800 text-slate-300 rounded-2xl p-5 border border-slate-700">
             <div className="flex items-start gap-3">
               <Database className="text-blue-400 shrink-0 mt-1" size={20} />
               <div>
                 <h4 className="text-white font-bold mb-1">Guru Starter Pack</h4>
                 <p className="text-xs leading-relaxed opacity-80 mb-3">
                   Import 30 high-performing templates (Frustrations, Desires, Fears) into your database to train the Anti-Duplicate engine.
                 </p>
                 <button 
                  onClick={handleImportPreset}
                  disabled={isImporting}
                  className="w-full py-2 bg-blue-600 hover:bg-blue-500 text-white text-xs font-bold uppercase tracking-wider rounded-lg transition-colors flex items-center justify-center gap-2"
                 >
                   {isImporting ? <Loader2 className="animate-spin" size={14}/> : <Import size={14} />}
                   Import 30 Items
                 </button>
               </div>
             </div>
          </div>

          <div className="bg-gradient-to-br from-amber-50 to-orange-50 border border-amber-100 p-5 rounded-2xl">
            <h4 className="text-amber-900 font-bold flex items-center gap-2 mb-2">
              <Share2 size={16} />
              Duplicate Check Active
            </h4>
            <p className="text-xs text-amber-800/80 leading-relaxed">
              New generations automatically analyze your last 30 ideas to ensure fresh angles. Cards marked with <AlertTriangle size={10} className="inline"/> indicate similarity to existing content.
            </p>
          </div>
        </aside>

        {/* RIGHT: Library Panel */}
        <div className="lg:col-span-8 space-y-6">
          
          {/* Filters Bar */}
          <div className="flex flex-col sm:flex-row justify-between items-center gap-4 bg-white p-2 pr-4 rounded-xl shadow-sm border border-slate-200">
            <div className="flex bg-slate-100 p-1 rounded-lg w-full sm:w-auto">
              {(['all', 'idea', 'posted'] as const).map((f) => (
                <button
                  key={f}
                  onClick={() => setFilter(f)}
                  className={`px-4 py-1.5 rounded-md text-sm font-medium capitalize transition-all ${
                    filter === f ? 'bg-white text-indigo-600 shadow-sm' : 'text-slate-500 hover:text-slate-700'
                  }`}
                >
                  {f}
                </button>
              ))}
            </div>
            
            <div className="relative w-full sm:w-64">
              <Search size={16} className="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400" />
              <input 
                type="text" 
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
                placeholder="Search ideas..."
                className="w-full pl-9 pr-4 py-2 bg-slate-50 border-none rounded-lg text-sm focus:ring-2 focus:ring-indigo-100 placeholder:text-slate-400"
              />
            </div>
          </div>

          {/* Grid */}
          <div className="grid grid-cols-1 md:grid-cols-2 gap-5 pb-20">
            {filteredPosts.length > 0 ? (
              filteredPosts.map((post) => (
                <ContentCard 
                  key={post.id} 
                  post={post} 
                  onDelete={handleDelete}
                  onUpdate={handleUpdate}
                  allPosts={posts}
                />
              ))
            ) : (
              <div className="col-span-full py-16 text-center">
                <div className="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4">
                  <History size={24} className="text-slate-300" />
                </div>
                <h3 className="text-slate-900 font-medium">No ideas found</h3>
                <p className="text-slate-500 text-sm mt-1">Try generating something new or changing filters.</p>
                {posts.length === 0 && (
                   <button 
                     onClick={handleImportPreset}
                     className="mt-4 px-4 py-2 bg-blue-50 text-blue-600 text-sm font-medium rounded-lg hover:bg-blue-100 transition-colors"
                   >
                     Import Starter Pack
                   </button>
                )}
              </div>
            )}
          </div>
        </div>
      </main>
    </div>
  );
}
